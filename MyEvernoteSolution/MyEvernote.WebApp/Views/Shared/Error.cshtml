@using MyEvernote.WebApp.ViewModels
@using MyEvernote.Entities.Messages
@model ErrorViewModel
@{
    ViewBag.Title = Model.Title;
}


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/Content/login-register.css" rel="stylesheet" />

<div class="container">

    <div class="wrapper">


        <section class="form-signin">

            <h3 class="form-signin-heading">@Model.Header .</h3>

            @foreach (ErrorMessageObj msg in Model.Items)
            {
                @msg.Message<br />

            }
            <hr class="colorgraph"><br>



        </section>
    </div>



</div>

@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js = " setTimeout(function () {window.location = '" + Model.RedirectingUrl + "';}, " + Model.RedirectingTimeout + "); ";

    }


}

<script>
    $(function () {

        @Html.Raw(js);

    });</script>
