@using MyEvernote.WebApp
@model IEnumerable<MyEvernote.Entities.Category>

@{
    ViewBag.Title = "Index";
}



<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUsername)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedUsername)
            </td>
            <td>
                @Bootstrapt.LinkButton("/Category/Edit/"+@item.Id, "warning", "btn-xs", "Edit", "edit", string.Empty)
                @Bootstrapt.LinkButton("/Category/Details/" + @item.Id, "info", "btn-xs", "Details", "search", string.Empty)

                @Bootstrapt.LinkButton("/Category/Delete/" + @item.Id, "danger", "btn-xs", "Delete", "trash", string.Empty)

               
            </td>
        </tr>
    }

</table>
