@using MyEvernote.Entities
@model EverNoteUser
@{
    ViewBag.Title = "Profiliniz";
}

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-2">
            <img src="~/images/@Model.ProfileImageFilename" class="img-circle" width="128" height="128" />
        </div>
        <div class="col-md-10">
            <h3>@(Model.Name + " " + Model.Surname)</h3>
            <br />
            <h5><b>@Html.DisplayNameFor(model => model.Username) : </b>@Model.Username</h5>
            <h5><b>@Html.DisplayNameFor(model => model.Email) : </b>@Model.Email</h5>
            <br />
            <h5><a href="/Home/EditProfile">Profili Düzenle... </a></h5>
            <h5><a href="@Url.Action("DeleteProfile")">HESABIMI SİL</a></h5>
        </div>
    </div>
</div>


@section footer{
    @Html.Partial("_PartialFooter")
}